{
    "manifest_version": 3,
    "name": "__MSG_name__",
    "version": "3.0",

    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
      "16": "16.png",
      "24": "24.png",
      "32": "32.png",
      "48": "48.png",
      "128": "128.png"
    },
    "author": "LÃ©on McGregor",
    "homepage_url": "https://github.com/LonMcGregor/LinksPanel",

    "background": {
      "service_worker": "sw.js"
    },

    "action": {
      "default_icon": {
        "16": "16.png",
        "24": "24.png",
        "32": "32.png",
        "48": "48.png",
        "128": "128.png"
      },
      "default_title": "__MSG_name__"
    },

    "side_panel": {
      "default_path": "panel.html"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],

    "content_security_policy": {
      "extension_pages": "default-src 'self'; style-src 'unsafe-inline';"
    },
    "permissions": ["storage", "sidePanel"],

    "options_ui": {
      "page": "options.html",
      "open_in_tab": false
    },

    "incognito": "split"
}
